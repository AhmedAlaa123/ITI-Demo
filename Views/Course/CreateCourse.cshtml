@using Day2.Models.Courses
@model CourseCreateDTO
@{
    SelectList deptItems = 
            new SelectList(ViewBag.Deparments,"Id","Name");
}

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class='container'>
     <h1 class='text-success mb-2'>Adding New Course.</h1>

    <form asp-action='InsertCourse' asp-controller='Course' method='post'  >
      <div class="form-group mb-3">
            <label asp-for="Name" ></label>
            <input asp-for="Name"   placeholder="Course Name" class='form-control' >
            <span asp-validation-for="Name" class='text-danger'></span>
    
      </div>
     
       <div class="form-group mb-3">
            <label asp-for="Degree"></label>
            <input asp-for="Degree"  class="form-control" placeholder="Degree" >
            <span asp-validation-for="Degree" class='text-danger'></span>
      </div>

    
        <div class="form-group mb-3">
            <label asp-for="MinDegree" ></label>
            <input asp-for="MinDegree" class="form-control" placeholder="Minmum Degree" >
            <span asp-validation-for="MinDegree" class='text-danger'></span>
        </div>

        <div class="form-group mb-3">
             <label asp-for="Dept_Id"></label>
             <select asp-items="deptItems" class="form-control" asp-for="Dept_Id">
                 <option class='text-center' value='0'>------------------Select Depoartment----------------------------</option>
             </select>
             <span asp-validation-for="Dept_Id" class='text-danger'></span>
        </div>
         
        <button type="submit" class="btn btn-success">Add Course</button>
    </form>
</div>
