@model Instructor

<div class="container">
    
<img class="card-img-top align-self-center rounded-pill m-2" style="width:150px;height150px"  src="/images/Instructors/@Model.Image" alt="Card image">
    <form action="/Instructor/UpdateInstructoreData/@Model.Id" method='post'>
      <div class="form-groupmb-3">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name"  placeholder="Instructor Name" name="Name" value="@(Model!=null?Model.Name:"")">
    
      </div>
      <div class="form-group mb-3">
        <label for="Salary">Salary</label>
        <input type="number" class="form-control" id="Salary" placeholder="Salary" name="Salary" min="100" value="@(Model!=null?Model.Salary:100)">
      </div>
       <div class="form-group mb-3">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" placeholder="Address" name="Address" value="@(Model!=null?Model.Address:"")">
      </div>

    
          <div class="form-group mb-3">
            <label for="Image">Image</label>
            <input type="text" class="form-control" id="Image" name="Image" value="@Model.Image">
          </div>

           <div class="form-group mb-3">
            <label for="Department">Department</label>
            <select  class="form-control" id="Department" name="Dept_Id">
               @foreach (Department item in ViewBag.Departments)
               {
                   if(Model!=null&&Model.Dept_Id==item.Id)
                   {
                     <option value="@item.Id" selected>@item.Name</option>

                   }
                   else{
                        <option value="@item.Id" >@item.Name</option>
                   }
               }
            </select>
          </div>

      
           <div class="form-group mb-3">
            <label for="Course">Course</label>
            <select class="form-control" id="Course" name="Course_Id">
               @foreach (Course item in ViewBag.Courses)
               {
                    if(Model!=null&&Model.Course_Id==item.Id)
                   {
                     <option value="@item.Id" selected>@item.Name</option>

                   }
                   else{
                        <option value="@item.Id" >@item.Name</option>
                   }
              
               }
            </select>
          </div>
          <button type="submit" class="btn btn-success">Update Data</button>
    </form>


</div>


