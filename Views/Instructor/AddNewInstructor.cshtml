@using Day2.Models.Instructors
@model InstructorCreateDTO

<div class='container'>
      <h1 class='text-success mb-2'>Adding New Instructor . </h1>
    <form action="/Instructor/InsertInstructor" method='post' enctype="multipart/form-data" >
      <div class="form-groupmb-3">
        <label for="Name" >Name</label>
        <input id="Name" type="text" class="form-control" placeholder="Instructor Name" name="Name" value='@(Model!=null?Model.Name:"")' >
    
      </div>
      <div class="form-group mb-3">
        <label for="Salary"> Salary</label>
        <input id="Salary" type="number" class="form-control"  placeholder="Salary" name="Salary" value='@(Model!=null?Model.Salary:100)' >
      </div>
       <div class="form-group mb-3">
        <label >Address</label>
        <input  type="text" class="form-control" placeholder="Address" name="Address" value='@(Model!=null?Model.Address:"")' >
      </div>

    
          <div class="form-group mb-3">
            <label for="ImageFile" >Image</label>
            <input id="ImageFile" name="ImageFile" type="file" class="form-control" >
          </div>

           <div class="form-group mb-3">
            <label for="Department">Department</label>
            <select   class="form-control" id="Department" name="Dept_Id" >
               @foreach (Department item in ViewBag.Departments)
               {
                   if(Model!=null&&Model.Dept_Id==item.Id)
                   {
                     <option value="@item.Id" selected>@item.Name</option>

                   }
                   else{
                        <option value="@item.Id" >@item.Name</option>
                   }
               }
            </select>
          </div>

      
           <div class="form-group mb-3">
            <label for="Course">Course</label>
            <select  class="form-control" id="Course" name="Course_Id" >
               @foreach (Course item in ViewBag.Courses)
               {
                    if(Model!=null&&Model.Course_Id==item.Id)
                   {
                     <option value="@item.Id" selected>@item.Name</option>

                   }
                   else{
                        <option value="@item.Id" >@item.Name</option>
                   }
              
               }
            </select>
          </div>
          <button type="submit" class="btn btn-success">Add Instructor</button>
    </form>


</div>

