
@using Day2.ViewModels

@model TraineeViewModel

<div class="container">
    <div class="row justify-content-center mb-2 align-items-stretch">
        <div class="col-md-4 col-sm-12 mb-4">
            <div class="card">
                 <img class="card-img-top rounded-pill align-self-center m-3" style='width:150px;height:150px'  src="/images/Trainees/@Model.Image" alt="Card image">
                 <div class="card-body">
                   <h2 class="card-title">@Model.TraineeName</h2>
                 </div>
            </div>
            
        </div>

        <div class="col-md-8 col-sm-12">
            
            <div class="card">
                
                @if(Model.TraineeResults.Count==0)
                {
                <h1 class="text-danger text-center mt-3 p-2">There are not Courses</h1>
                }
                else
                {
                    <h2 class='text-success p-2'>Courses</h2>
                     <table class="table  table-hover">
                        <tr>
                            <th>Course Name</th>
                            <th>Degree</th>
                            <th>State</th>
                        </tr>
                       @foreach(TraineeCourseViewModel traineeViewModel in Model.TraineeResults)
                        {


                            <tr>

                                <td>@traineeViewModel.CourseName</td>
                                <td>@traineeViewModel.CourseDegree</td>
                                <td>
                            
                                    <span class="@traineeViewModel.color">@traineeViewModel.State</span>
                                </td>


                            </tr>


                        }
                     </table>
                }
               
           </div>
        </div>

    </div>
    <a class="btn btn-primary" href="/Trainee/">Back</a>
</div>




