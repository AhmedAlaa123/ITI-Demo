
@model List<Department>

<div class='container'>
    <h1 class='text-success mb-2'>Adding New Trainee.</h1>

    <form action="/Trainee/InsertTrainee" method='post'  enctype="multipart/form-data">
      <div class="form-group mb-3">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name"  placeholder="Trainee Name" name="Name" value="@(ViewBag.Trainee!=null?ViewBag.Trainee.Name:"")">
    
      </div>
      <div class="form-group mb-3">
        <label for="Grade">Grade/Level</label>
        <input type="number" class="form-control" id="Grade" placeholder="Grade" name="Salary" min="1" max="4" value='@(ViewBag.Trainee!=null?ViewBag.Trainee.Grade:1)'>
      </div>
       <div class="form-group mb-3">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" placeholder="Address" name="Address" value='@(ViewBag.Trainee!=null?ViewBag.Trainee.Address:"")'>
      </div>

    
        <div class="form-group mb-3">
        <label for="Image">Image</label>
        <input type="file" class="form-control" id="Image" name="Image">
        </div>

        <div class="form-group mb-3">
        <label for="Department">Department</label>
        <select  class="form-control" id="Department" name="Dep_Id">
            @foreach (Department department in Model)
            {

                    if (ViewBag.Trainee != null)
                    {
                        <option value="@department.Id" selected >@department.Name</option>
                    }
                    else
                    {
                        <option value="@department.Id" >@department.Name</option>
                    }

            }
        </select>
        </div>
         
        <button type="submit" class="btn btn-success">Add Trainee</button>
    </form>


</div>

